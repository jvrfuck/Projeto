
class Emmpresas(models.Model):
    EmpresaCreated = models.DateTimeField(verbose_name="TimeStamp", auto_now_add=True)
    ativo = models.CharField(max_length =1)
    Empresa_nome = models.CharField(max_length = 100,verbose_name="Nome da Empresa")
    Empresa_atividade = models.CharField(max_length = 100,verbose_name="Atividades da empresa")
    Empresa_cnpj = models.CharField(max_length = 100,default=0,verbose_name="CNPJ da empresa")
    Empresa_endereco = models.CharField(max_length = 100,verbose_name="Endereco da empresa")
    Empresa_telefone = models.CharField(max_length =20,default=0,verbose_name="Telefone da empresa")
    Empresa_email = models.CharField(max_length = 100,verbose_name="Email da empresa")
    Empresa_servico = models.CharField(max_length = 100,verbose_name="Servico da empresa")

    def __str__(self):
        return '%s %s' % (self.Empresa_nome, self.Empresa_atividade, self.Empresa_cnpj, self.Empresa_endereco, self.Empresa_telefone, self.Empresa_email, self.Empresa_servico)

    class Meta:
        ordering = ('Empresa_nome',)
        verbose_name = 'Empresa'
        verbose_name_plural = 'Empresas'

class Pessoas(models.Model):
    PessoaCreated = models.DateTimeField(verbose_name="TimeStamp", auto_now_add=True)
    ativo = models.CharField(max_length =1)
    Pessoa_nome = models.CharField(max_length = 100,verbose_name="Nome da Pessoa",)
    Pessoa_cpf = models.CharField(max_length = 100,verbose_name="Cpf da Pessoa",)
    Pessoa_datanascimento = models.DateField(max_length = 100,verbose_name="Datanascimento",)
    Pessoa_telefone = models.CharField(max_length = 100,verbose_name="Telefone da Pessoa",)
    Pessoa_email = models.CharField(max_length = 100,verbose_name="Email da Pessoa",)
    Pessoa_fidelidade = models.CharField(max_length = 100,verbose_name="Fidelidade da Pessoa",)

    def __str__(self):
        return '%s %s' % (self.Pessoa_nome, self.Pessoa_cpf, self.Pessoa_datanascimento, self.Pessoa_telefone,self.Pessoa_email, self.Pessoa_fidelidade)

    class Meta:
        ordering = ('Pesoa_nome',)
        verbose_name = 'Pessoa'
        verbose_name_plural = 'Pessoas'

class Horarios(models.Model):
    HorarioCreated = models.DateTimeField(verbose_name="TimeStamp", auto_now_add=True)
    ativo = models.CharField(max_length =1)
    Horario_empresa = models.CharField(max_length = 100,verbose_name="Horario da empresa",)
    Horario_pessoas = models.CharField(max_length = 100,verbose_name="Horario Pessoa")
    Horario_local = models.CharField(max_length = 100,verbose_name="Horario Local")
    Horario_servico = models.CharField(max_length = 100,verbose_name="Horario Servico")
    Horario_duracao = models.DateField(max_length = 100,verbose_name="horario duracao")
    Horaio_inicio = models.DateField(max_length = 100,verbose_name="horario inicio")
    Horario_tipo = models.CharField(max_length = 100,verbose_name="horario tipo")  

    def __str__(self):
        return '%s %s' % (self.Horario_empresa, self.Horario_pessoas, self.Horario_local, self.Horario_servico, self.Horario_duracao, self.Horario_inicio, self.Horario_tipo)

    class Meta:
        ordering = ()
        verbose_name = 'Horario'
        verbose_name_plural = 'Horarios'

class Locais(models.Model):
    LocalCreated = models.DateTimeField(verbose_name="TimeStamp", auto_now_add=True)
    ativo = models.CharField(max_length =1)
    Local_nome = models.CharField(max_length = 100,verbose_name="Nome do Local")
    Local_endereco = models.CharField(max_length = 100,verbose_name="Endereco do Local")
    Local_descricao = models.CharField(max_length = 100,verbose_name="Descricao do Local")   


    def __str__(self):
        return '%s %s' % (self.Local_nome, self.Local_endereco, self.Local_descricao)

    class Meta:
        ordering = ('Local_nome', 'Local_endereco', 'Local_descricao')
        verbose_name = 'Local'
        verbose_name_plural = 'Locais'